<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F7F7F9"
    android:id="@+id/cartoon"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/reading_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/reading_list_item_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/author"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/playfair"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/isento"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/author"
        android:fontFamily="@font/isento"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>